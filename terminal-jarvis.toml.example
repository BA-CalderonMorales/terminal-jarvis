# =============================================================================
# TERMINAL JARVIS USER CONFIGURATION EXAMPLE  
# =============================================================================
# Copy this file to `terminal-jarvis.toml` in your project directory or 
# `~/.config/terminal-jarvis/config.toml` for user-wide settings
#
# This simple format automatically works with Terminal Jarvis's modular config system.
# Only include sections you want to customize - defaults will be used for the rest.

# =============================================================================
# USER TOOL PREFERENCES - Control which tools are enabled and their behavior
# Note: Tools in Terminal Jarvis may install via npm, uv, or curl depending on
# the specific tool. No extra config is requiredâ€”Jarvis detects what's needed.
# =============================================================================
[preferences.tools]
# Enable/disable tools and control auto-updates
aider = { enabled = true, auto_update = true }
amp = { enabled = true, auto_update = true }
claude = { enabled = true, auto_update = true }
gemini = { enabled = true, auto_update = false }  # Disable auto-update for Gemini
qwen = { enabled = true, auto_update = true }
opencode = { enabled = true, auto_update = true }
llxprt = { enabled = true, auto_update = true }
codex = { enabled = true, auto_update = true }
crush = { enabled = true, auto_update = true }
goose = { enabled = true, auto_update = true }

# Optional: UI and update preferences
[preferences.ui]
theme = "t-jarvis"  # Options: t-jarvis, classic, matrix
show_welcome_screen = true
verbose_output = false

[preferences.updates]
check_for_updates = true
auto_update_tools = false  # Global override for individual tool settings
update_frequency = "weekly"  # Options: daily, weekly, monthly, never

# =============================================================================
# TEMPLATES CONFIGURATION - Optional template system setup
# =============================================================================
[templates]
repository = "your-username/jarvis-templates"
auto_sync = true
sync_frequency = "daily"

# =============================================================================  
# API CONFIGURATION - Optional service endpoint customization
# =============================================================================
[api]
base_url = "https://api.terminal-jarvis.dev"
timeout_seconds = 30
max_retries = 3

# =============================================================================
# ADVANCED: Custom tool configuration overrides (optional)
# =============================================================================
# You can override specific tool settings if needed:
# [tools.claude.install]
# command = "npm"
# args = ["install", "-g", "@anthropic-ai/claude-code@specific-version"]

# Note: Terminal Jarvis automatically discovers all supported tools from its
# built-in registry. You don't need to define tools here unless you want to
# override specific installation commands or add custom tools.
#
# Installer types used by built-in tools (for reference):
# - npm: claude, gemini, qwen, opencode, llxprt, codex, crush, amp
# - uv:  aider
# - curl: goose
